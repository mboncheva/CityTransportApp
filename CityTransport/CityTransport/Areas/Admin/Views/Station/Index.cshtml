@model IEnumerable<StationViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (!Model.Any())
{
    <h3 class="text-center m-3">No Stations!</h3>
    <div class="mb-1">
        <a asp-area="Admin" asp-controller="Station" asp-action="Create" class="btn btn-info pull-left">Create Station</a>
    </div>
}
else
{
    <h2 class="text-center m-3">Stations</h2>
    <div class="mb-1">
        <a asp-area="Admin" asp-controller="Station" asp-action="Create" class="btn btn-info pull-left">Create Station</a>
    </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Station Name</th>
                    <th>Station Code</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var station in Model)
                {
                    <tr>
                        <th>@station.StationName</th>
                        <td>@station.StationCode</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Station" asp-action="Edit" asp-route-Id="@station.Id" class="btn btn-outline-info">Edit</a>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Station" asp-action="Delete" asp-route-Id="@station.Id" class="btn btn-outline-info">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}
