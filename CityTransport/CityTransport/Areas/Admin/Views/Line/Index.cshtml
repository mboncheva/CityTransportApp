@model IEnumerable<LineViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (!Model.Any())
{
    <h3 class="text-center m-2">No Lines!</h3>
    <div class="mb-3">
        <a asp-area="Admin" asp-controller="Line" asp-action="Create" class="btn btn-info pull-left">Create Line</a>
    </div>
}
else
{
    <h2 class="text-center m-2">Lines</h2>
    <div class="mb-3">
        <a asp-area="Admin" asp-controller="Line" asp-action="Create" class="btn btn-info pull-left">Create Line</a>
    </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Line name</th>
                    <th>Line type</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model)
                {
                <tr>
                    <th>@line.LineName</th>
                    <td>@line.Type</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Line" asp-action="Edit" asp-route-Id="@line.Id" class="btn btn-outline-info">Edit</a>
                    </td>
                    <td class="col-lg-3 d-flex justify-content-center">
                        <a asp-area="Admin" asp-controller="TimeTable" asp-action="Index" asp-route-Id="@line.Id" class="btn btn-outline-info">TimeTable</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
}

