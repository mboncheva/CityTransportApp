@model CreateLineInputModel
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-left">Create Line</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="LineName"></label>
                <input asp-for="LineName" class="form-control" />
                <span asp-validation-for="LineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeTransport"></label>
                <select asp-for="TypeTransport" asp-items="Model.TransportTypes" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


