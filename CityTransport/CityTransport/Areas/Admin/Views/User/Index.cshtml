@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}
<h2 class="text-center m-2">Users</h2>
<div class="mb-1">
    <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-info pull-left">Create User</a>
</div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>Administrator</th>
                <th>User</th>
                <th>Customer Card Number</th>
                <th>Register On</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@Html.DisplayFor(model => user.IsAdmin)</td>
                    <td>@Html.DisplayFor(model => user.IsUser)</td>
                    @if (user.CustomerCardNumber == null)
                    {
                        <td>No Card</td>
                    }
                    else
                    {
                        <td>@user.CustomerCardNumber</td>
                    }
                    <td>@user.RegisteredOn</td>
                    <td>
                        <a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-Id="@user.Id" class="btn btn-outline-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>