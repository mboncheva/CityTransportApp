@model IEnumerable<SubscriptionCardsViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (!Model.Any())
{
    <h3 class="text-center m-2">No Subscription Cards!</h3>
    <div class="mb-1">
        <a asp-area="Admin" asp-controller="SubscriptionCard" asp-action="Create" class="btn btn-info pull-left">Create SubscriptionCards</a>
    </div>
}
else
{
    <h2 class="text-center m-2">Subscription Cards</h2>
    <div class="mb-1">
        <a asp-area="Admin" asp-controller="SubscriptionCard" asp-action="Create" class="btn btn-info pull-left">Create SubscriptionCards</a>
    </div>
           <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Type Card</th>
                    <th>Count Trips</th>
                    <th>Validity</th>
                    <th>Price</th>
                    <th>Ticket Price</th>
                    <th>Ticket price after subscription depletion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subscriptionCard in Model)
                {
                <tr>
                    <td>@subscriptionCard.TypeCard</td>
                    <td>@subscriptionCard.CountTrips</td>
                    <td>@subscriptionCard.ValidityCard</td>
                    <td>@subscriptionCard.Price</td>
                    <td>@subscriptionCard.TicketPrice</td>
                    <td>1.30</td>
                    <td>
                        <a asp-area="Admin" asp-controller="SubscriptionCard" asp-action="Edit" asp-route-Id="@subscriptionCard.Id" class="btn btn-outline-info">Edit</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
}
