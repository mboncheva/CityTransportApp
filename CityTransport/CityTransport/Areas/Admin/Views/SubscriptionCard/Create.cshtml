@model CreateSubscriptionCardInputModel
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-left m-2">Create Subscription Card</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="TypeCard"></label>
                <select asp-for="TypeCard" asp-items="Model.CardTypes" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ValidityCard"></label>
                <select asp-for="ValidityCard" asp-items="Model.ValidityCards" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CountTrips"></label>
                <input min="1" asp-for="CountTrips" class="form-control" />
                <span asp-validation-for="CountTrips" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-outline-info">Create</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}