@model EditSubscriptionCardInputModel
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-left m-2">Edit Subscription Card</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ValidityCard"></label>
                <select asp-for="ValidityCard" class="form-control">
                    @foreach (var validateCard in Model.ValidityCards)
                    {
                        @if (validateCard.ToString() == Model.ValidityCard)
                        {
                            <option value="@validateCard.Value" selected>@validateCard.Text</option>
                        }

                        <option value="@validateCard.Value">@validateCard.Text</option>

                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-outline-info">Edit</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}